<div class="columns is-centered">
    <div class="column is-half">
    <% @entries.each do |day, entries| %>
        <h3 class="is-size-4 has-text-weight-bold mt-6 mb-5 has-text-centered">Entries for <%= day %></h3>
        <nav class="level is-mobile">
        <div class="level-item has-text-centered">
            <div>
                <p class="heading">Calories</p>
                <p class="title"><%= entries.pluck(:calories).sum %></p>
            </div>
            
        </div>

        <div class="level-item has-text-centered">
            <div>
                <p class="heading">Proteins</p>
                <p class="title"><%= entries.pluck(:proteins).sum %>g</p>
            </div>
            
        </div>

        <div class="level-item has-text-centered">
            <div>
                <p class="heading">Carbs</p>
                <p class="title"><%= entries.pluck(:carbohydrates).sum %>g</p>
            </div>
            
        </div>

         <div class="level-item has-text-centered">
            <div>
                <p class="heading">Fat</p>
                <p class="title"><%= entries.pluck(:fats).sum %>g</p>
            </div>
            
        </div>


        </nav>

        
        <% entries.each do |entry| %>
        <%= link_to entry_path(entry) do %>
            <div class="card">
                <div class="card-content">
                <strong><%= entry.meal_type%> - <%= entry.category.title if entry.category.present? %></strong><br>
                
                <%= entry.calories %>g calories,
                <%= entry.proteins %>g proteins,
                <%= entry.carbohydrates %>g carbs,
                <%= entry.fats %>g fat
                </div>
            </div>
            <% end %>
        <% end %>
    <% end %>

    </div>

</div>

